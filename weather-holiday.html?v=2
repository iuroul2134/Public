function loadWeather(city) {
  fetch(`https://tianqiapi.com/api?version=v6&city=${city}`)
    .then(res => res.json())
    .then(data => {
      document.getElementById("city").innerText = "ğŸ“ " + data.city;
      document.getElementById("temp").innerText = data.tem + "Â°C";
      document.getElementById("desc").innerText = data.wea;
